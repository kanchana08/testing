
pipeline {
    agent any
    tools { nodejs "npm" }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', credentialsId: 'GIT_PATH', url: 'https://github.com/kanchana08/angular.git'
            }
        }

        stage('Build') { 
            steps { 
                sh 'npm install'
                sh 'npm run ng build --prod'
            } 
        }

        stage('Push to Another Repo') {
            steps {
                script {
                    // Set Git user configuration
                    sh '''
                    git config user.email "your-email@example.com"
                    git config user.name "Your Name"
                    '''

                    // Create a new branch with the build number
                    def branchName = "build-${env.BUILD_NUMBER}"
                    sh "git checkout -b ${branchName}"

                    // Add the remote repository (if not already added) and push the new branch
                    sh "git remote add target-repo https://username:password@another-git-repo-url.git"
                    sh "git push target-repo ${branchName}"
                }
            }
        }
    }
}
