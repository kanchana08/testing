
pipeline {
    agent any
    tools { nodejs "npm" }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', credentialsId: 'GIT_PATH', url: 'https://github.com/kanchana08/angular.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run ng build --prod'
            }
        }
        stage('Push to Another Repository') {
            steps {
                script {
                    // Define the new branch name
                    def branchName = "build-${env.BUILD_NUMBER}"
                    
                    // Set up Git configuration
                    sh "git config user.email 'jenkins@localhost'"
                    sh "git config user.name 'Jenkins CI'"
                    
                    // Use Jenkins credentials for authentication
                    withCredentials([usernamePassword(credentialsId: 'target-repo-credentials', usernameVariable: 'GIT_USERNAME', passwordVariable: 'GIT_PASSWORD')]) {
                        // Add a remote for the new repository using the credentials
                        sh "git remote add target-repo https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/your-username/your-empty-repo.git"

                        // Fetch from the target repo to check if it is empty
                        def isRepoEmpty = sh(script: "git ls-remote --heads target-repo", returnStatus: true) != 0
                        
                        if (isRepoEmpty) {
                            // Initialize the repository with an initial commit
                            sh "git checkout --orphan ${branchName}"
                            sh "echo '# Initial Commit' > README.md"
                            sh "git add README.md"
                            sh "git commit -m 'Initial commit for ${branchName}'"
                        } else {
                            // If not empty, create a new branch and switch to it
                            sh "git checkout -b ${branchName}"
                        }
                        
                        // Add all changes and commit
                        sh "git add ."
                        sh "git commit -m 'Build ${env.BUILD_NUMBER}' || echo 'No changes to commit.'"
                        
                        // Push to the new repository
                        sh "git push target-repo ${branchName}"
                    }
                }
            }
        }
    }
}
